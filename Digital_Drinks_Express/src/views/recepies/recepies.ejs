<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/styles.css">
    <script src="https://kit.fontawesome.com/5376d63d7e.js" crossorigin="anonymous"></script>
    <meta name="description" content="cocktails, drinks, bar tools, herramientas de barra, cocteleras, cocktails recepies, recetas de cocteles, cursos de cocteleria">
    <title>Recetas|Digital Drinks</title>
</head>
<body>
    <div class="central_container">
        <header class="header_container">
            <div class="always_visible">
                <img src="/images/header/logoAzul.svg" alt="Digital Drinks Logo" class="logo">
               <!-- <a href="#" class="toggle_nav">
                    <span class="fa fa-bars"></span>
                </a>  -->
            </div>  
            <nav class="navigation_bar">
                <ul>
                    <div class="sign_button">
                        <li>
                            <a href="/login" class="sign_up_button"><b>Ingresar</b></a>
                        </li>
                         <li>
                             <a href="/register" class="sign_in_button"><b>Crear Cuenta</b></a>  
                        </li>
                    </div>
                    <div class="options">
                        <li><a href="#"><img src=" " alt="">Mi cuenta</a></li>
                        <li><a href="/products/productsCart"><img src=" " alt="">Carrito</a></li>
                        <li><a href="/"><img src=" " alt="">Home</a></li>
                        <li><a href="/products"><img src=" " alt="">Productos</a></li>
                        <li><a href="/courses"><img src=" " alt="">Cursos</a></li>
                        <li><a href="/recepies"><img src=" " alt="">Recetas</a></li>
                        <div class="not_visible">
                            <li ><a href="#"><img src=" " alt="" >Contacto</a></li>
                            <li><a href="#"><img src=" " alt="">Quienes somos</a></li>
                        </div>  
                    </div>
                </ul>
            </nav>
        </header>
        <!-- Barra de busqueda recetas -->
        <div class="search_container">
          <form action="">
            <label for="products_search"></label>
            <input type="search" id="products_search" name="products_search" placeholder="Busqueda de Recetas">
            <button type="submit" value="Buscar">Buscar</button>
          </form>
        </div>
        <!--Inicio de Recetas-->

        <main class="">
            <% recepies.forEach(recepie => { %>
             
                <section class="item_container">
                    <article class="product">
                        <a href="/recepies/recepieDetail/<%= recepie.id %> ">
                        <img src= /images/recepies<%= recepie.image %>  alt="<%= recepie.name %> ">
                        </a>
                        <div class="product_description">
                            <h2><%= recepie.name %></h2>
                            <p><%= recepie.description %> </p>
                        </div>
                        <a href="#" class="see_more"><b>VER MÁS</b></a>                
                      </article>
                </section>
            <% }) %>

            <!--Inicio de los aside-->
            <section class="categories_container">
                <aside class="categories">
                    <h2>Categorias/h2>
                    <ul>
                        <li> 
                            <a href="">Articulo de interes</a> 
                        </li>
                        <li>
                            <a href="">Articulo de interes</a>
                        </li>
                        <li>
                            <a href="">Articulo de interes</a> 
                        </li>
                        <li>
                            <a href="">Articulo de interes</a> 
                        </li>
                        <li>
                            <a href="">Articulo de interes</a> 
                        </li>
                    </ul>
                </aside>
            </section>
        </main>
        <footer class="footer_container">
            <article class="contact">
                <a href="#"><img src="/img/header/carrito.png" alt="">Quienes somos</a>
                <a href="#"><img src="/img/header/carrito.png" alt="">Contacto</a>                
            </article>
            <article>
                <p>Seguinos en nuestras redes sociales:</p>
                <div class="social_media">
                    <a href="#">
                        <img src="/images/footer/facebook.svg" alt="Facebook">
                    </a>
                    <a href="">
                        <img src="/images/footer/instagram.svg" alt="Instagram">
                    </a>
                    <a href="">
                        <img src="/images/footer/twitter.svg" alt="Twitter">
                    </a>
                </div>
            </article>
            <article class="copyright">
                <p>Copyright © Todos los derechos reservados</p>
            </article>
        </footer>
    </div>
</body>
</html>