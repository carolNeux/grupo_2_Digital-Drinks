<!DOCTYPE html>
<html lang="en">
    <!--head/partial-->
    <%- include('../partials/head', {title: 'Productos | Digital Drinks'}) %>
    <!--fin head/partial-->
<body>
  
    <div class="central_container">
    <!--header/partial-->
    <%- include('../partials/header') %>
    <!--fin header/partial-->
        <!-- Barra de busqueda productos -->
        <div class="search_container">
          <form action="">
            <label for="products_search"></label>
            <input type="search" id="products_search" name="products_search" placeholder="Busqueda de Productos">
            <button type="submit" value="Buscar">Buscar</button>
          </form>
        </div>
        <!--Inicio de productos-->
        <main class="">
            <% products.forEach(product => { %>
                <section class="item_container">
                    <article class="product">
                        <a href="/products/productDetail/<%= product.id %> ">
                        <img src= /images/products<%= product.image %>  alt="<%= product.name %> "></a>
                        <div class="product_description">
                            <h2><%= product.name %></h2>
                        <% if (product.discount !== 0) { %>
                            <p><%= product.discount %>  % OFF</p>
                            <p>$ <%= toThousand(product.price - (product.price * product.discount / 100)) %></p>
                        <% } else { %>
                        <p>$<%= toThousand(product.price) %></p>
                        <% } %>
                        </div>
                        <a href="/products/productDetail/<%= product.id %> " class="see_more"><b>VER M√ÅS</b></a>                
                      </article>
                </section>
            <% }) %>
        </main>
    <!--footer/partial-->
    <%- include('../partials/footer') %>
    <!--final footer/partial-->
    </div>
    <script src="./javascripts/slider.js"></script>
</body>
</html>