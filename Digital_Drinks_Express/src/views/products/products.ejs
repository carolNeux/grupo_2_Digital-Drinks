<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://kit.fontawesome.com/5376d63d7e.js" crossorigin="anonymous"></script>
    <meta name="description" content="cocktails, drinks, bar tools, herramientas de barra, cocteleras, cocktails recepies, recetas de cocteles, cursos de cocteleria">
    <title>Productos |Digital Drinks</title>
</head>
<body>
  
    <div class="central_container">
    <!--header/partial-->
    <%- include('../partials/header') %>
    <!--fin header/partial-->
        <!-- Barra de busqueda productos -->
        <div class="search_container">
          <form action="">
            <label for="products_search"></label>
            <input type="search" id="products_search" name="products_search" placeholder="Busqueda de Productos">
            <button type="submit" value="Buscar">Buscar</button>
          </form>
        </div>
        <!--Inicio de productos-->
        <main class="">
            <% products.forEach(product => { %>
                <section class="item_container">
                    <article class="product">
                        <a href="/products/productDetail/<%= product.id %> ">
                        <img src= /images/products<%= product.image %>  alt="<%= product.name %> "></a>
                        <div class="product_description">
                            <h2><%= product.name %></h2>
                        <% if (product.discount !== 0) { %>
                            <p><%= product.discount %>  % OFF</p>
                            <p>$ <%= toThousand(product.price - (product.price * product.discount / 100)) %></p>
                        <% } else { %>
                        <p>$<%= toThousand(product.price) %></p>
                        <% } %>
                        </div>
                        <a href="/products/productDetail/<%= product.id %> " class="see_more"><b>VER M√ÅS</b></a>                
                      </article>
                </section>
            <% }) %>
        </main>
    <!--footer/partial-->
    <%- include('../partials/footer') %>
    <!--final footer/partial-->
    </div>
    <script src="./javascripts/slider.js"></script>
</body>
</html>