<body>
    <!-- Aca va el Header -->
    <div class="reg-box">
        
        <h2> Edita tu producto</h2>
        <form action="/products/edit/<%= productDetail.id %>?_method=PUT" method="POST">
        <div class="reg-fill">  
             <!-- Armamos uno general o por categoria cursos, recetas etc -->

                <label for="name">Nombre del Producto</label>
                <input type="text" value="<%= productDetail.name %> ">
            
                <label for="price" >Precio del producto:</label>
                <input type="text" id="price" name="price" value="<%= productDetail.price %> ">

                <label for="discount">Descuento:</label>
                <input type="text" id="discount" name="discount" value="<%= productDetail.discount %> ">

                 <label for="description" class="">Descripci√≥n:</label>
                 <textarea name="description" id="description" class="form-input"> "</textarea>
                 <br>
                 <p>Agregar imagen</p>
                 <input type="file" name="image">
                 <br>

                 <button type="submit">Guardar Producto</button>
        </div>
    </form>
    </div>


