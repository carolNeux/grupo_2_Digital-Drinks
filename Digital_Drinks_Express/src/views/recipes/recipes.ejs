<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://kit.fontawesome.com/5376d63d7e.js" crossorigin="anonymous"></script>
    <meta name="description" content="cocktails, drinks, bar tools, herramientas de barra, cocteleras, cocktails recepies, recetas de cocteles, cursos de cocteleria">
    <title>Recetas|Digital Drinks</title>
</head>
<body>
    <div class="central_container">
    <!--header/partial-->
    <%- include('../partials/header') %>
    <!--fin header/partial-->
        <!-- Barra de busqueda recetas -->
        <div class="search_container">
          <form action="">
            <label for="products_search"></label>
            <input type="search" id="products_search" name="products_search" placeholder="Busqueda de Recetas">
            <button type="submit" value="Buscar">Buscar</button>
          </form>
        </div>
        <!--Inicio de Recetas-->

        <main class="">
            <% recipes.forEach(recipe => { %>
             
                <section class="item_container">
                    <article class="product">
                        <a href="/recipes/recepieDetail/<%= recipe.id %> ">
                        <img src= /images/recipes<%= recipe.image %>  alt="<%= recipe.name %> ">
                        </a>
                        <div class="product_description">
                            <h2><%= recipe.name %></h2>
                            <p><%= recipe.description %> </p>
                        </div>
                        <a href="#" class="see_more"><b>VER M√ÅS</b></a>                
                      </article>
                </section>
            <% }) %>

            <!--Inicio de los aside-->
            <section class="categories_container">
                <aside class="categories">
                    <h2>Categorias/h2>
                    <ul>
                        <li> 
                            <a href="">Articulo de interes</a> 
                        </li>
                        <li>
                            <a href="">Articulo de interes</a>
                        </li>
                        <li>
                            <a href="">Articulo de interes</a> 
                        </li>
                        <li>
                            <a href="">Articulo de interes</a> 
                        </li>
                        <li>
                            <a href="">Articulo de interes</a> 
                        </li>
                    </ul>
                </aside>
            </section>
        </main>
    <!--footer/partial-->
    <%- include('../partials/footer') %>
    <!--final footer/partial-->
    </div>
    <script src="./javascripts/slider.js"></script>
</body>
</html>