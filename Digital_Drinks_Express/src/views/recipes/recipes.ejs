                        <img src= /images/recipes<%= recipe.image %>  alt="<%= recipe.name %> ">
                        </a>
                        <div class="product_description">
                            <h2><%= recipe.name %></h2>
                            <p><%= recipe.description %> </p>
                        </div>
                        <a href="./recipes/recipesDetail/<%= recipe.id %> " class="see_more"><b>VER M√ÅS</b></a>                
                      </article>
                </section>
