            <button type="submit" value="Buscar">Buscar</button>
          </form>
        </div>
        <!--Inicio de courses-->
        <main class="">
            <% courses.forEach(course => { %>
                <section class="item_container">
                    <article class="product">
                        <img src= /images/courses<%= course.image %>  alt="<%= course.name %> ">
                        </a>
                        <div class="product_description">
                            <h2><%= course.name %></h2>
                            <span><%= course.discount %>  % OFF</span>
                            <p>$ <%= toThousand(course.price - (course.price * course.discount / 100)) %> </p>
                        </div>
                        <a href="/courses/coursesDetail/<%= course.id %>" class="see_more"><b>VER M√ÅS</b></a>                
                      </article>
                </section>
            <% }) %>
        </main>
    <!--footer/partial-->
    <%- include('../partials/footer') %>
    <!--final footer/partial-->
    </div>
    <script src="./javascripts/slider.js"></script>
