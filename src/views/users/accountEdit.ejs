<!DOCTYPE html>
<html lang="en">
<head>
    <!--head/partial-->
    <%- include('../partials/head') %>
    <!--fin head/partial-->
    <link rel="stylesheet" href="/stylesheets/usersEdit.css">
</head>
<body>
    <!--header/partial-->
    <%- include('../partials/header') %>
    <!--fin header/partial--> 
    <section class="user_main_container">
        <form action="/users/accountEdit/<%= userInformation.id %>?_method=PUT " method="POST">
            <h2>Editar usuario:</h2>
            <article class="user_list_container">
                <% if (typeof errors != 'undefined') { %>
                    <% errors.forEach(error => { %>
                     <ul class="errors">
                         <li> <%= error.msg %> </li>
                     </ul>
                    <% }) %>
                   <% } %>
                <div class="input_data">
                    <h4>Nombre: </h4>
                    <input type="text" name="first_name" value="<%= userInformation.first_name %>">
                </div>
                <div class="input_data">
                    <h4>Apellido: </h4>
                    <input type="text" name="last_name" value="<%= userInformation.last_name %>">
                </div>
                <div class="input_data">
                    <h4>Nombre de Usuario: </h4>
                    <input type="text" name="username" value="<%= userInformation.username %>">
                </div>
                <div class="input_data">
                    <h4>Email:</h4>
                    <input type="email" name="email" value="<%= userInformation.email%>">
                </div>
                <div class="input_data">
                    <h4>Fecha de nacimiento: </h4>
                    <input type="date" name="birthday" value="<%= userInformation.birthday %>">
                </div>
                <div class="input_data">
                    <h4>Contrase√±a: </h4>
                    <input type="password" name="password" id="password" value="<%= userInformation.password %>">

                </div>
                <div class="user_buttons_container">
                    <input type="submit" value="Editar">
                </div>
                <div class="user_buttons_container">
                    <a href="/users/account">Volver al Home</a>
                </div>
            </article>
        </form>
    </section>
    <!--footer/partial-->
    <%- include('../partials/footer') %>
    <!--final footer/partial-->        
</body>
</html>