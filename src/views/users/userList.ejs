<!DOCTYPE html>
<html lang="en">
<head>
    <!--head/partial-->
    <%- include('../partials/head') %>
    <!--fin head/partial-->
    <link rel="stylesheet" href="/stylesheets/usersList.css">
</head>
<body>
    <!--header/partial-->
    <%- include('../partials/header') %>
    <!--fin header/partial--> 
    <section class="user_main_container">
        <h2>Lista de usuarios:</h2>
        <% users.forEach(user => { %>
            <article class="user_list_container">
                <div><h4>Nombre: </h4><p> <%= user.firstName %> </p></div>
                <div><h4>Apellido: </h4><p> <%= user.lastName %></p></div>
                <div><h4>Nombre de Usuario: </h4><p> <%= user.username %></p></div>
                <div><h4>Email:</h4><p> <%= user.email %></p></div>
                <div><h4>Fecha de nacimiento: </h4><p> <%= user.birthday %></p></div>
                <div><h4>Categoria: </h4><p> <%= user.category %></p></div>
                <div class="user_buttons_container">
                    <form action="/users/edit/<%= user.id %>" method="GET">
                        <input type="submit" value="Editar">
                    </form>
                    <form action="/users/delete/<%= user.id %>?_method=DELETE" method="POST">
                        <input type="submit" value="Borrar">
                    </form>
                </div>
            </article>
        <% }) %>
    </section>
    <!--footer/partial-->
    <%- include('../partials/footer') %>
    <!--final footer/partial-->        
</body>
</html>