<!DOCTYPE html>
<html lang="en">
<head>
    <!--head/partial-->
    <%- include('../partials/head') %>
    <!--fin head/partial-->
    <link rel="stylesheet" href="/stylesheets/usersEdit.css">
</head>
<body>
    <!--header/partial-->
    <%- include('../partials/header') %>
    <!--fin header/partial--> 
    <section class="user_main_container">
        <form action="/users/edit/<%= editUser.id %>?_method=PUT " method="POST">
            <h2>Editar usuario:</h2>
            <article class="user_list_container">
                <div class="input_data"><h4>Nombre: </h4><input type="text" name="first_name" value="<%= editUser.first_name %>"></div>
                <div class="input_data"><h4>Apellido: </h4><input type="text" name="last_name" value="<%= editUser.last_name %>"></div>
                <div class="input_data"><h4>Nombre de Usuario: </h4><input type="text" name="username" value="<%= editUser.username %>"></div>
                <div class="input_data"><h4>Email:</h4><input type="email" name="email" value="<%= editUser.email%>"></div>
                <div class="input_data"><h4>Fecha de nacimiento: </h4><input type="date" name="birthday" value="<%= editUser.birthday %>"></div>
                <div class="input_data"><h4>Categoria: </h4>
                <select name="user_category_id" >
                    <% category.forEach(oneCategory => { %>
                        <% if (oneCategory.id === editUser.user_category_id) { %>
                        <option value="<%= oneCategory.id %>" selected><%= oneCategory.name %> </option>
                        <% } else { %>
                            <option value="<%= oneCategory.id %>"> <%= oneCategory.name %> </option> 
                        <% } %> 
                    <% }) %>
                   
                </select></div>
                <div class="user_buttons_container">
                    <input type="submit" value="Editar">
                </div>
            </article>
        </form>
    </section>
    <!--footer/partial-->
    <%- include('../partials/footer') %>
    <!--final footer/partial-->        
</body>
</html>