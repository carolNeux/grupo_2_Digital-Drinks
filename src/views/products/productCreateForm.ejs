<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Registro |Digital Drinks</title>
    <link rel="stylesheet" href="/stylesheets/styleCreateEdit.css">
    <script src="https://kit.fontawesome.com/5376d63d7e.js" crossorigin="anonymous"></script>
    <meta name="description" content="cocktails, drinks, bar tools, herramientas de barra, cocteleras, cocktails recepies, recetas de cocteles, cursos de cocteleria">
</head>
<body>
    <div class="reg-box"> 
        <a href="/products/"> <img src="/images/header/logoAzul.svg" alt=""> </a>
        <h2> Crea tu Producto</h2>
        <form action="/products/create" method="POST" enctype="multipart/form-data">
            <% if (typeof errors != 'undefined') { %>
                <% errors.forEach(error => { %>
                 <ul class="errors">
                     <li> <%= error.msg %> </li>
                 </ul>
                <% }) %>
            <% } %>
        <div class="reg-fill">  
            <!-- Armamos uno general o por categoria cursos, recetas etc -->
            <label for="name">Nombre del Producto</label>
            <input type="text" placeholder="Vodka" id="name" name="name">
            <label for="price" >Precio del producto:</label>
            <input type="text" id="price" name="price" placeholder="$1234" >
            <label for="discount">Descuento:</label>
            <input type="text" id="discount" name="discount" placeholder="15%" >
            <label for="description" class="">Descripci√≥n:</label>
            <textarea name="description" id="description" class="form-input"></textarea>
            <label for="category_id"> Categoria </label>
                <select name="category_id">
                    <% categories.forEach(category => { %>         
                         <option value="<%= category.id %>"> <%= category.name %> </option>
                    <% }) %>
                </select>
            <p>Sube una imagen de tu producto</p>
            <input type="file" name="image">
            <br>
            <button type="submit">Guardar producto</button>
        </div>
    </form>
    </div>    
</body>
</html>